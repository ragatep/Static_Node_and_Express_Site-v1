extends layout

block content
  div.container
    h1= `404 - Page Not Found`
    .error-505
      img.error-404_img(src="/static/images/custom_404.png", title="Translation: Oops!  It looks like the page you're looking for does not exist.", alt="Custom 404 Server Error")
    hr
    a.home(href=`/`) Home
    hr
    if err
      div.not-found-stack
        pre #{err.stack}